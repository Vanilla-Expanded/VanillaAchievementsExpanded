<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<AchievementsExpanded.AchievementDef>
		<defName>VAE_Bloodsuckers</defName>
		<label>Bloodsuckers</label>
		<description>Get 3 colonists with Hemogenic gene</description>
		<tab>VAE_DLCTab</tab>
		<tracker Class="AchievementsExpanded.GeneAddedTracker">
			<genesList>
				<li>
					<key>Hemogenic</key>
					<value>3</value>
				</li>
			</genesList>
			
		</tracker>
		
		<texPath>Achievements/VAE_Bloodsuckers</texPath>
		<points>10</points>
	</AchievementsExpanded.AchievementDef>
	
	
	<AchievementsExpanded.AchievementDef>

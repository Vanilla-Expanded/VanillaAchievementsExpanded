	<AchievementsExpanded.AchievementDef>
		<defName>VAE_MeltingPot</defName>
		<label>Melting Pot</label>
		<description>Get a colonist from one of each of the vanilla xenotypes</description>
		<tab>VAE_DLCTab</tab>
		<tracker Class="AchievementsExpanded.XenotypeDefTracker">
			<requireAll>true</requireAll>
			<xenotypeDefs>
				<li>
					<key>Dirtmole</key>
					<value>1</value>
				</li>
				<li>
					<key>Genie</key>
					<value>1</value>
				</li>
				<li>
					<key>Hussar</key>
					<value>1</value>
				</li>
				<li>
					<key>Sanguophage</key>
					<value>1</value>
				</li>
				<li>
					<key>Pigskin</key>
					<value>1</value>
				</li>
				<li>
					<key>Impid</key>
					<value>1</value>
				</li>
				<li>
					<key>Waster</key>
					<value>1</value>
				</li>
				<li>
					<key>Yttakin</key>
					<value>1</value>
				</li>
				<li>
					<key>Highmate</key>
					<value>1</value>
				</li>
			</xenotypeDefs>
			
		</tracker>
		
		<texPath>Achievements/VAE_MeltingPot</texPath>
		<points>100</points>
	</AchievementsExpanded.AchievementDef>
	
